all : i386 x86_64

i386 : i386-macosx/callbacks.dylib

i386-macosx/callbacks.dylib : i386-macosx/callbacks.o
	raco ctool -d i386-macosx --ld callbacks.dylib ++ldf -arch ++ldf i386 ++ldf -mmacosx-version-min=10.5 i386-macosx/callbacks.o

i386-macosx/callbacks.o : callbacks.c
	raco ctool -d i386-macosx --cc ++ccf -arch ++ccf i386 ++ccf -mmacosx-version-min=10.5 callbacks.c

x86_64 : x86_64-macosx/callbacks.dylib

x86_64-macosx/callbacks.dylib : x86_64-macosx/callbacks.o
	raco ctool -d x86_64-macosx --ld callbacks.dylib ++ldf -arch ++ldf x86_64 ++ldf -mmacosx-version-min=10.5 x86_64-macosx/callbacks.o

x86_64-macosx/callbacks.o : callbacks.c
	raco ctool -d x86_64-macosx --cc ++ccf -arch ++ccf x86_64 ++ccf -mmacosx-version-min=10.5 callbacks.c

